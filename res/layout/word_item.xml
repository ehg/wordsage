<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="fill_parent"
	android:layout_height="wrap_content" android:id="@+id/linearLayout2"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:background="#fff">
	<LinearLayout android:layout_width="wrap_content"
		android:id="@+id/linearLayout1" android:layout_height="wrap_content"
		android:orientation="vertical" android:layout_weight="90">
		<TextView android:text="TextView" android:id="@+id/lblListWord"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:textColor="#000" android:textSize="8pt" />
		<TextView android:text="TextView" android:id="@+id/lblListDefinition"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:textColor="#7F47DD" />
	</LinearLayout>
	<ImageButton android:id="@+id/btnDelete" android:layout_width="wrap_content" android:src="@android:drawable/ic_delete" android:layout_height="wrap_content" android:layout_weight="10" android:layout_gravity="center_vertical"></ImageButton>

</LinearLayout>

